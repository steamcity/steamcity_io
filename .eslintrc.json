{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "globals": {
    "Chart": "readonly",
    "L": "readonly"
  },
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": "off",
    "no-dupe-class-members": "off",
    "prettier/prettier": ["error", {
      "semi": false,
      "singleQuote": true,
      "tabWidth": 4,
      "trailingComma": "none",
      "printWidth": 100
    }]
  },
  "ignorePatterns": [
    "node_modules/",
    "data/",
    "uploads/",
    "coverage/",
    "dist/"
  ]
}
