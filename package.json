{
  "name": "steamcity-iot-platform",
  "version": "3.0.0",
  "description": "SteamCity IoT Platform for educational experiments",
  "main": "src/index.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "build": "echo 'Build completed - ready for production'",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:backend": "jest",
    "lint": "eslint src/ public/js/ --ext .js",
    "lint:fix": "eslint src/ public/js/ --ext .js --fix",
    "format": "prettier --write \"src/**/*.js\" \"public/js/**/*.js\" \"test/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\" \"public/js/**/*.js\" \"test/**/*.js\"",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "joi": "^17.9.2",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@vitest/ui": "^3.2.4",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^29.5.0",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.2.3",
    "nodemon": "^2.0.22",
    "prettier": "^3.6.2",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "iot",
    "education",
    "steamcity",
    "sensors",
    "experiments"
  ],
  "author": "SteamCity Team",
  "license": "MIT"
}
