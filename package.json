{
  "name": "steamcity-iot-platform",
  "version": "3.0.0",
  "description": "SteamCity IoT Platform for educational experiments",
  "main": "src/index.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "build": "echo 'Build completed - ready for production'",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:backend": "jest",
    "lint": "eslint src/",
    "format": "prettier --write src/"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "joi": "^17.9.2",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@vitest/ui": "^3.2.4",
    "eslint": "^8.42.0",
    "jest": "^29.5.0",
    "jsdom": "^27.0.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "iot",
    "education",
    "steamcity",
    "sensors",
    "experiments"
  ],
  "author": "SteamCity Team",
  "license": "MIT"
